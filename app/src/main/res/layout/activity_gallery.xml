<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_imageprofile_id"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ppimage"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_chooseimage"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_imageprofile_id"
        android:layout_marginTop="30dp"
        android:text="CHOOSE IMAGE"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_entername_id"
        android:hint="Enter Name"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bt_chooseimage"
        android:layout_marginTop="15dp"
        android:textColorHint="#000000"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="#FF00BF"
        android:inputType="textPersonName"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_phonenumber_id"
        android:hint="Phone Number"
        android:textColorHint="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_entername_id"
        android:layout_marginTop="15dp"
        android:inputType="number"
        android:textColor="#FF00BF"
        android:textSize="20dp"
        android:textStyle="italic"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_emailadress_id"
        android:hint="Email Adress"
        android:textColorHint="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_phonenumber_id"
        android:layout_marginTop="15dp"
        android:textColor="#FF00BF"
        android:textSize="20dp"
        android:textStyle="italic"
        android:inputType="textEmailAddress"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_submit_id"
        android:text="SUBMIT"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_emailadress_id"
        android:layout_marginTop="15dp"
        android:background="#0101DF"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>












</RelativeLayout>